<h3>Story Showcase</h3>

<div class="row">
    {{#each stories}}

    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{#if user}}
                {{{editIcon user.id ../user.id id}}}
                {{/if}}
            </div>
            <div class="card-content">
                <h5 class="center-align">{{title}}</h5>
                <p class="story-text">{{stripTags (truncate body 200)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}">{{user.firstName}} {{user.lastName}}
                </div>
            </div>
            <div class="card-action center-align">
                <div>
                    <a class="btn grey" href="/stories/show/{{id}}">Read More</a>
                </div>
            </div>
        </div>
    </div>
    {{else}} No stories found {{/each}}
</div>